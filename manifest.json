{
  "manifest_version": 3,

  "name": "Copy ...",
  "description": "This extension is a waste of time",
  "version": "0.099",

  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
  	"contextMenus",
	  "tabs"
  ],
  "background": {
    "service_worker": "contextMenu.js",
    "type": "module"
  },
  "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "contentscript.js"
            ],
            "run_at": "document_end",
            "all_frames": false
        }
    ]  
}
